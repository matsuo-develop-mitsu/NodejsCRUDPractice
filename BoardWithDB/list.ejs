<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1"
      crossorigin="anonymous"
    />
    <title>Listのページです</title>

    <script>
      function addUser() {
        location.href = "/addUser";
      }

      function deleteUser() {
        const delUserId = [];
        const delUsers = document.getElementsByClassName("delCheckBox");
        const allUserId = document.getElementsByClassName("userId");

        for (let i = 0; i < delUsers.length; i++) {
          if (delUsers[i].checked) {
            delUserId.push(allUserId[i].innerText);
          }
        }
        console.log(delUserId);
      }
    </script>
  </head>
  <body class="container">
    <h1>Listのページです</h1>
    <button onclick="addUser()" class="btn btn-primary">ユーザー登録</button>
    <table class="table">
      <thead>
        <tr>
          <th>名前</th>
          <th>メール</th>
          <th>年齢</th>
          <th>更新</th>
          <th>削除</th>
        </tr>
      </thead>
      <tbody>
        <% content.forEach((user) => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.mail %></td>
          <td><%= user.age %></td>
          <td>
            <form action="./update" method="post">
              <input type="hidden" name="id" value="<%= user.id %>" />
              <button type="submit" name="button">更新</button>
            </form>
          </td>
          <td>
            <form action="./delete" method="post">
              <input type="hidden" name="id" value="<%= user.id %>" />
              <button type="submit" name="button">削除</button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </body>
</html>
